<div class="container m-3">
  <%= simple_form_for(@cocktail) do |f|%>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div>
      <%= f.input :name %>
      <%= f.input :image %>
    </div>

    <div class="btn btn-primary">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>

